import java.util.*;

class Node{
    int data;
    Node left,right;
    
    Node(int value){
        data=value;
        left=null;
        right=null;
    }
}

class Main{
    Node root;
    
    Node create(Scanner sc){
        System.out.println("enter node value");
        int value= sc.nextInt();
        
        if(value==-1){
            return null;
        }
        
        Node n = new Node(value);
        
        System.out.println("enter left child of node ");
        n.left=create(sc);
        
        System.out.println("enter right child of node ");
        n.right=create(sc);
        
        return n;
    }
    
    void inorder(Node node){
        if(node==null)
        return;
        inorder(node.left);
        System.out.print(node.data + " ");
        inorder(node.right);
    }
    
    void preorder(Node node){
        if(node==null)
        return;
        System.out.print(node.data + " ");
        preorder(node.left);
        preorder(node.right);
    }
    
    void postorder(Node node){
        if(node==null)
        return;
        postorder(node.left);
        postorder(node.right);
        System.out.print(node.data + " ");
    }
    
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        Main m=new Main();
        
        System.out.println("Binary tree construction:");
        m.root=m.create(sc);
        
        System.out.println("traversals ");
        
        System.out.println("inorder traversal ");
        m.inorder(m.root);
        System.out.println();
        
        System.out.println("preorder traversal ");
        m.preorder(m.root);
        System.out.println();
        
        System.out.println("postorder traversals ");
        m.postorder(m.root);
        System.out.println();
        
        sc.close();
    }
}
